              const panelsList = ['onboard','dashboard','quiz','games','hub','shop','market','activities','mentor'];
              panelsList.forEach(p => { const pEl = document.getElementById(p); if(pEl) pEl.classList.add('hidden'); });
              const dash = document.getElementById('dashboard'); if(dash) dash.classList.remove('hidden');
            }
          });
        }
      });
    })();

    // --- Remaining trading and UI code (unchanged but with a few wiring additions) ---
    function renderMarketWatch(){
      const marketWatch = document.getElementById('marketWatch');
      if(!marketWatch) return;
      marketWatch.innerHTML='';
      Object.keys(state.marketPrices).forEach(sym=>{
        const price = state.marketPrices[sym];
        const d = document.createElement('div'); d.className='watch-item';
        d.innerHTML = <div><strong>${sym}</strong><div class="muted small">Demo stock</div></div><div style="text-align:right"><div style="font-weight:700">‚Çπ${price}</div><div class="muted small">Vol sim</div></div>;
        marketWatch.appendChild(d);
      });
    }

    function renderOpenOrders(){
      const openOrdersEl = document.getElementById('openOrders');
      if(!openOrdersEl) return;
      openOrdersEl.innerHTML='';
      if(state.orders.length===0){ openOrdersEl.innerHTML = '<div class="muted small" style="padding:6px">No open orders</div>'; return; }
      state.orders.forEach(o=>{
        const div = document.createElement('div'); div.style.padding='8px'; div.style.border='1px solid #eef6fb'; div.style.borderRadius='8px'; div.style.marginBottom='8px';
        div.innerHTML = <div style="display:flex;justify-content:space-between"><strong>${o.side.toUpperCase()} ${o.symbol}</strong><div class="muted small">Qty ${o.qty} ‚Ä¢ ‚Çπ${o.price}</div></div><div class="muted small">Placed ${new Date(o.created).toLocaleString()}</div><div style="margin-top:6px;"><button class="ghost" data-cancel="${o.id}">Cancel</button></div>;
        openOrdersEl.appendChild(div);
        const cancelBtn = div.querySelector('[data-cancel]');
        if(cancelBtn) cancelBtn.onclick = ()=> { cancelOrder(o.id); };
      });
    }

    function renderOrderHistory(){
      const orderHistoryEl = document.getElementById('orderHistory');
      if(!orderHistoryEl) return;
      orderHistoryEl.innerHTML='';
      if(!state.orderHistory || state.orderHistory.length===0){ orderHistoryEl.innerHTML = '<div class="muted small" style="padding:6px">No trades yet</div>'; return; }
      state.orderHistory.slice().reverse().forEach(h=>{
        const d = document.createElement('div'); d.style.padding='6px'; d.style.borderBottom='1px dashed #eef6fb';
        d.innerHTML = <div style="display:flex;justify-content:space-between"><div><strong>${h.side.toUpperCase()} ${h.symbol}</strong> <span class="muted small">(${h.type})</span></div><div><strong>‚Çπ${h.price}</strong></div></div><div class="muted small">Qty ${h.qty} ‚Ä¢ ${new Date(h.ts).toLocaleString()}</div>;
        orderHistoryEl.appendChild(d);
      });
    }

    function renderOrderBook(){
      const orderBookEl = document.getElementById('orderBook');
      if(!orderBookEl) return;
      orderBookEl.innerHTML='';
      if(state.orders.length===0){ orderBookEl.innerHTML = '<div class="muted small" style="padding:6px">Order book empty</div>'; return; }
      const groups = {};
      state.orders.forEach(o=>{
        groups[o.symbol] = groups[o.symbol] || {buy:[], sell:[]};
        groups[o.symbol][o.side].push(o);
      });
      Object.keys(groups).forEach(sym=>{
        const g = groups[sym];
        const div = document.createElement('div'); div.style.border='1px dashed #eef6fb'; div.style.padding='8px'; div.style.marginBottom='8px'; div.style.borderRadius='8px';
        div.innerHTML = <div style="display:flex;justify-content:space-between"><strong>${sym}</strong><div class="muted small">Buy / Sell</div></div>;
        const buyList = g.buy.map(o=>B ${o.qty}@${o.price}).join(', ') || '‚Äî';
        const sellList = g.sell.map(o=>S ${o.qty}@${o.price}).join(', ') || '‚Äî';
        const inner = document.createElement('div'); inner.className='muted small'; inner.innerHTML = <div>Buys: ${buyList}</div><div style="margin-top:6px">Sells: ${sellList}</div>;
        div.appendChild(inner);
        orderBookEl.appendChild(div);
      });
    }

    function isoNow(){ return new Date().toISOString(); }
    function placeOrder(side, symbol, qty, type='market', price=null){
      if(qty <= 0){ alert('Enter a valid quantity'); return; }
      if(type === 'market'){
        const execPrice = state.marketPrices[symbol];
        executeTrade({side,symbol,qty,price:execPrice,type:'market'});
      } else {
        const id = 'o'+(++orderIdCounter);
        state.orders.push({id, side, symbol, qty, price: Number(price), type:'limit', created: isoNow()});
        saveState(); renderOpenOrders(); renderOrderBook();
        showReward('Limit Order Placed', ${side.toUpperCase()} ${qty} ${symbol} @ ‚Çπ${price});
      }
    }

    function executeTrade(order){
      const {side,symbol,qty,price,type} = order;
      const cost = qty * price;
      if(side === 'sell'){
        const holding = state.portfolio[symbol];
        if(!holding || holding.qty < qty){
          showReward('Sell Failed', 'Not enough shares to sell.');
          return;
        }
        state.portfolio[symbol].qty -= qty;
        if(state.portfolio[symbol].qty === 0) delete state.portfolio[symbol];
        state.wallet.balance += cost;
      } else {
        if(cost > state.wallet.balance){ showReward('Buy Failed','Insufficient wallet balance.'); return; }
        state.wallet.balance -= cost;
        const h = state.portfolio[symbol];
        if(h){
          const newQty = h.qty + qty;
          const newAvg = ((h.avgPrice * h.qty) + (price * qty)) / newQty;
          state.portfolio[symbol] = { qty: newQty, avgPrice: Number(newAvg.toFixed(2)) };
        } else {
          state.portfolio[symbol] = { qty: qty, avgPrice: price };
        }
      }
      const rec = { id: 't'+(++orderIdCounter), side, symbol, qty, price, type, ts: isoNow() };
      state.orderHistory.push(rec);
      if(type === 'limit'){
        const idx = state.orders.findIndex(o => o.side===side && o.symbol===symbol && o.price===price && o.qty===qty);
        if(idx >= 0) state.orders.splice(idx,1);
      }
      state.points += 5;
      saveState();
      renderPortfolio();
      renderOpenOrders();
      renderOrderHistory();
      renderOrderBook();
      renderPortfolioSnapshot();
      updateUI();
      triggerConfetti();
      showReward('Trade Executed', ${side.toUpperCase()} ${qty} ${symbol} @ ‚Çπ${price} executed.);
    }

    function cancelOrder(id){
      const idx = state.orders.findIndex(o => o.id === id);
      if(idx>=0){ state.orders.splice(idx,1); saveState(); renderOpenOrders(); renderOrderBook(); showReward('Order Cancelled','Limit order cancelled.'); }
    }

    function matchLimitOrders(){
      const ordersToExec = [];
      state.orders.forEach(o => {
        const market = state.marketPrices[o.symbol];
        if(o.side === 'buy' && market <= o.price){ ordersToExec.push({...o, price: market}); }
        if(o.side === 'sell' && market >= o.price){ ordersToExec.push({...o, price: market}); }
      });
      if(ordersToExec.length === 0) return;
      ordersToExec.forEach(o => { executeTrade({side:o.side,symbol:o.symbol,qty:o.qty,price:o.price,type:'limit'}); });
    }

    function randomizePrices(){
      Object.keys(state.marketPrices).forEach(k=>{
        const move = (Math.random()*8) - 3; // -3% .. +5%
        state.marketPrices[k] = Math.max(1, Math.round(state.marketPrices[k] * (1 + move/100)));
      });
      renderMarketWatch();
    }

    // wallet handlers
    document.getElementById('depositBtn').addEventListener('click', ()=> {
      const amt = Number(document.getElementById('depositAmt').value) || 0;
      if(amt<=0){ alert('Enter a positive amount'); return; }
      state.wallet.balance += amt; document.getElementById('depositAmt').value=''; saveState(); updateUI(); showReward('Deposit', ‚Çπ${amt} added (demo)); triggerConfetti();
    });
    document.getElementById('withdrawBtn').addEventListener('click', ()=> {
      const amt = Number(document.getElementById('sendAmt').value) || 0; if(amt<=0){ alert('Enter a positive amount'); return; }
      if(amt > state.wallet.balance){ alert('Insufficient demo balance'); return; }
      state.wallet.balance -= amt; document.getElementById('sendAmt').value=''; saveState(); updateUI(); showReward('Withdraw', ‚Çπ${amt} withdrawn (demo)); triggerConfetti();
    });

    document.getElementById('refreshPrices').addEventListener('click', ()=> { randomizePrices(); matchLimitOrders(); saveState(); updateUI(); renderPortfolio(); showReward('Market Refreshed','Prices updated'); });
    document.getElementById('liquidateAll').addEventListener('click', ()=> {
      const keys = Object.keys(state.portfolio);
      if(keys.length===0){ alert('No holdings'); return; }
      if(!confirm('Sell all holdings at market price?')) return;
      keys.forEach(sym => { const h = state.portfolio[sym]; const price = state.marketPrices[sym]||0; state.wallet.balance += h.qty * price; });
      state.portfolio = {}; state.points += 20; saveState(); updateUI(); renderPortfolio(); showReward('Liquidated','All holdings sold at market price');
    });

    // mentor handlers (improved: simulate typing + challenge marking)
    document.getElementById('askMentor').addEventListener('click', async ()=> {
      const qEl = document.getElementById('mentorQ');
      const q = qEl.value.trim(); if(!q) return;
      // show user's message immediately
      state.mentorLog = state.mentorLog||[]; state.mentorLog.push({q,'a':'...'}); saveState(); renderMentorLog();
      qEl.value='';
      // simulate thinking/typing
      const mentorLogEl = document.getElementById('mentorLog');
      const botTyping = document.createElement('div'); botTyping.className='mentorBot'; botTyping.innerText = 'Buddy: typing...';
      mentorLogEl.appendChild(botTyping);
      mentorLogEl.scrollTop = mentorLogEl.scrollHeight;
      await new Promise(r => setTimeout(r, 700 + Math.random()*600));
      // compute answer
      const low=q.toLowerCase();
      let a = 'Nice question! Explore the Hub lessons to learn more.';
      if(low.includes('upi')) a = 'UPI (Unified Payments Interface) is an instant payment system. Always verify the recipient name and do not share OTP or UPI PIN.';
      else if(low.includes('rbi')) a = 'RBI is the central bank; it issues guidelines for banks and payments. For teens, many banks support minor accounts with parent consent.';
      else if(low.includes('sebi')) a = 'SEBI regulates stock markets. It encourages investor education, registered intermediaries, and KYC.';
      else if(low.includes('saving') || low.includes('save')) a = 'Tip: Pay yourself first‚Äîsave a part of any money you get. Small regular amounts grow with time.';
      else if(low.includes('stock') || low.includes('share')) a = 'Stocks are ownership in companies. Start small, diversify, and learn via demo trading before using real money.';
      // replace placeholder '...' with answer in state. We'll update last entry's answer
      const lastIdx = state.mentorLog.length - 1;
      if(lastIdx >= 0){ state.mentorLog[lastIdx].a = a; saveState(); }
      // remove typing indicator and re-render
      renderMentorLog();
      // mark challenge
      if(!state.challenges.mentor){ state.challenges.mentor = true; state.points+=10; saveState(); updateUI(); showReward('Mentor used','+10 points'); }
    });

    document.getElementById('clearLog').addEventListener('click', ()=> { state.mentorLog = []; saveState(); renderMentorLog(); });

